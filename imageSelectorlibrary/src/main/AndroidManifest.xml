<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.waterfairy.imageselect">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity
            android:name=".activity.ImageSelectActivity"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageShowActivity"
            android:screenOrientation="behind"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageViewPagerPreviewActivity"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageSelectLandActivity"
            android:screenOrientation="landscape"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageSelectPortActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageShowLandActivity"
            android:screenOrientation="landscape"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageShowPortActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageViewPagerPreviewPortActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageViewPagerPreviewLandActivity"
            android:screenOrientation="landscape"
            android:theme="@style/ImageSelectorNoActionBar">
        </activity>
        <activity
            android:name=".activity.ImageViewPagerShowActivity"
            android:screenOrientation="behind"
            android:theme="@style/ImageSelectorNoActionBar"/>
    </application>

</manifest>